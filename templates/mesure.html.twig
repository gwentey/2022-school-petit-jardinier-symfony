{% extends 'base.html.twig' %}

{% block title %}Crée
{% endblock %}

{% block body %}


	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4  mt-3">

{% if devis is defined %}
			<form class="needs-validation" action="{{ path('mesure_add_validee', {'id': devis}) }}" method="post" novalidate>

{% else %}
			<form class="needs-validation" action="{{ path('mesure_validee') }}" method="post" novalidate>

	{% endif %}
			<div class="container" style="margin-top: 1em;">
				<!-- Sign up form -->
				<!-- Sign up card -->
					<div class="card person-card"> <div
						class="card-body">
						<!-- Sex image -->
						<img id="img_sex" class="person-img" src="{{ asset("images/admin/facture.png") }}">
						<h2 id="who_message" class="card-title">Crée un devis</h2>
						<!-- First row (on medium screen) -->
						<div class="row">
							<div class="form-group col-md-6">
								<select class="form-select" aria-label="Selectionner votre type de haie" name="type" required>
									<option value="" selected>--Choisir votre type de haie--</option>
									{% for haie in lesHaies %}
										<option value="{{ haie.id }}">{{ haie.nom }}</option>
									{% endfor %}
								</select>

							</div>
							<div class="form-group col-md-3">
								<input type="text" pattern="[0-9]{0,7}" class="form-control" name="longueur" id="longueur" placeholder="Longueur en cm" required>
								<div class="invalid-feedback">
									Non valide
								</div>
							</div>
							<div class="form-group col-md-3">
								<input type="text" pattern="[0-9]{0,7}" class="form-control" name="hauteur" id="hauteur" placeholder="Hauteur en cm" required>
								<div class="invalid-feedback">
									Non valide
								</div>
							</div>

						</div>
					</div>
				</div>

				<div style="margin-top: 1em;" class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary btn-lg btn-block">Ajouter la haie au devis</button>
				</div>

			</div>
		</form>

	</main>
</div></div>{% endblock %}
