{% block title %}Crée
{% endblock %}

{% block body %}


	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4  mt-3">

		<form class="needs-validation" action="{{ path('app_creation_categorie_validee') }}" method="post" novalidate>

			<div class="container" style="margin-top: 1em;">
				<!-- Sign up form -->
				<!-- Sign up card -->
					<div class="card person-card"> <div
