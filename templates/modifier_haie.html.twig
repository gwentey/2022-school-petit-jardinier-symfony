{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}


	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4  mt-3">

		<form class="needs-validation" action="{{ path('app_modifier_haie_validee') }}" method="post" novalidate>
			<input name="id" type="hidden" value="{{ haie.id }}">

			<div class="container" style="margin-top: 1em;">
				<!-- Sign up form -->
				<!-- Sign up card -->
					<div class="card person-card"> <div
						class="card-body">
						<!-- Sex image -->
						<img id="img_sex" class="person-img" src="{{ asset("images/admin/haie.png") }}">
						<h2 id="who_message" class="card-title">Modifier un type de haie</h2>
						<!-- First row (on medium screen) -->
						<div class="row">
							<div class="form-group col-md-6">
								<input id="nom" name="nom" type="text" class="form-control" placeholder="Nom de la haie" value="{{ haie.nom }}" required>
								<div class="invalid-feedback"></div>
							</div>
							<div class="form-group col-md-4">
								<select name="categorie" class="form-select" required>
									<option value="">-- Selectionner une cat√©gorie --</option>
									{% for categorie in categories %}
										{% if categorie.id == haie.categorie.id %}
											<option selected value="{{ categorie.id }}">{{ categorie.libelle }}</option>
										{% else %}
											<option value="{{ categorie.id }}">{{ categorie.libelle }}</option>
										{% endif %}
									{% endfor %}
								</select>
								<div class="invalid-feedback"></div>
							</div>
							<div class="form-group col-md-2">
								<input id="prix" name="prix" type="text" pattern="[0-9]+([\.][0-9]+)?" class="form-control" value="{{ haie.prix }}" placeholder="Prix de la haie" required>
								<div class="invalid-feedback"></div>
							</div>

						</div>
					</div>
				</div>

				<div style="margin-top: 1em;" class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary btn-lg btn-block">Modifier le type de haie</button>
				</div>

			</div>
		</form>

	</main>
</div></div>{% endblock %}
